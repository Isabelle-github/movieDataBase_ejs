<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= myPageTitle %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('./partials/head') %>
        <main>
            <h1>Favorite Movies</h1>
            <section id="home_allMovies">

                <% movieData.forEach(movie=> { %>
                    <article>
                        <figure>
                            <a href="/movieDetail/<%= movie._id %> "><img src=<%=movie.movieposter %>
                                alt="img"></a>
                            <figcaption>
                                <p>
                                    <%=movie.title %>
                                </p>
                                <p>
                                    <%=movie.director %>
                                </p>
                            </figcaption>
                        </figure>
                        <a class="ancher_yellow" href='/movieDetail/<%= movie._id %>/removeFavorite'>Remove from
                            Favorites</a>
                    </article>
                    <% }) %>
            </section>
        </main>
        <%- include('./partials/foot') %>
</body>

</html>